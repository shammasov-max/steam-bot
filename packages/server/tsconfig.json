{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@steam-bot/isomorphic": ["../isomorphic/src/index.ts"],
      "@steam-bot/isomorphic/*": ["../isomorphic/src/*"]
    },
    "plugins": [
      { "name": "@effect/language-service" }
    ]
  },
  "include": ["src/**/*", "../isomorphic/src/**/*"]
}

